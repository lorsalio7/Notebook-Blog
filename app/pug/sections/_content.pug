    section.content__recent-posts.recent-posts
      h3.content__title.section-title
        span.section-title__marker Recently
        | Posted
      if indexPageVariant === 1
        .recent-posts__list
          each item in pugData.recent_posts.slice(0, 3)
            .recent-posts__item
              article.small-post.small-post--medium
                img(src= item.image width="401" height="229", alt= item.title).small-post__image
                .small-post__info
                  h4.small-post__title
                    a(href= item.link).small-post__link= item.title
                  a(href= item.categorie_url).small-post__badge= item.categorie
                  .small-post__description
                    .small-post__meta.meta
                      a(href= item.author_link title= item.author_name).meta__writer-link.meta__item
                        img(src= item.author_image, width="18" height="18" alt="Author Post - " + item.author_name).meta__photo
                        p.meta__name= item.author_name
                      time(datetime= item.post_datetime).meta__date.meta__item= item.post_date
                      p.meta__reading-time= item.reading_time
                    p.small-post__post-text= item.post_text
