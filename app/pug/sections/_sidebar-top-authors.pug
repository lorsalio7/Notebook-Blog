          h4.small-author-card__name
            a(href="#").small-author-card__author-link Jenny Kia
          p.small-author-card__about Fashion designer, Blogger, Activist
          ul.socials.socials--small
            li.socials__item
              a(href="#").socials__link
                svg(width="6" height="10" class="socials__icon" aria-hidden="true")
                  use(xlink:href="img/sprite.svg#facebook-ic")
            li.socials__item
              a(href="#").socials__link
                svg(width="11" height="9" class="socials__icon" aria-hidden="true")
                  use(xlink:href="img/sprite.svg#twitter-ic")
